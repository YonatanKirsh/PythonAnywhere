<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserDetailsActivity">

    <TextView
        android:id="@+id/text_view_edit_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit_details_message"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edit_text_pretty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/edit_text_image_url" />

    <EditText
        android:id="@+id/edit_text_image_url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_update_details" />


    <Button
        android:id="@+id/button_update_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/submit_update_details"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_goto_main"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/button_goto_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/goto_main"
        android:layout_marginBottom="12dp"
        app:layout_constraintLeft_toRightOf="@+id/button_update_details"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>